# Development Environment Configuration

# Environment
NODE_ENV=development
VERCEL=0

# Development server
VITEPRESS_DEV_PORT=5173
VITEPRESS_HOST=true

# Performance monitoring (disabled in dev)
PERFORMANCE_MONITORING=false
ANALYTICS_ENABLED=false

# Cache (shorter in dev)
CACHE_MAX_AGE=0
STATIC_CACHE_MAX_AGE=0

# PWA (disabled in dev for faster reloads)
PWA_ENABLED=false
SERVICE_WORKER_ENABLED=false

# Debug options
DEBUG_MODE=true
VERBOSE_LOGGING=true

# Hot reload
HMR_ENABLED=true
FAST_REFRESH=true
